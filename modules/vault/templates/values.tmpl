dev:
  enabled: ${dev_mode}

injector:
  annotations:
    "vault.hashicorp.com/agent-init-first": "${agent_init_first}"

server:
  image:
    repository: ${vault_image_repository}
    tag: ${vault_image_tag}
  dataStorage:
    enabled: true
  auditStorage:
    enabled: ${vault_enable_audit}
  ha:
    enabled: true
    replicas: ${replicas}
    raft:
      enabled: true
      config: |
        ui = ${enable_vault_ui}

        listener "tcp" {
          tls_disable     = ${tls_disable}
          tls_cert_file   = "/vault/userconfig/tls/tls.crt"
          tls_key_file    = "/vault/userconfig/tls/tls.key"
          address         = "[::]:8200"
          cluster_address = "[::]:8201"
        }

        storage "raft" {
          path = "/vault/data"
        }

        service_registration "kubernetes" {}
  extraVolumes:
    - type: secret
      name: ${tls_secret_name}
  extraEnvironmentVars:
    VAULT_ADDR: https://127.0.0.1:8200
    VAULT_SKIP_VERIFY: true
ui:
  enabled: ${enable_vault_ui}
  serviceType: ${vault_service_type}
  annotations:
    service.beta.kubernetes.io/do-loadbalancer-hostname: ${workaround_subdomain_name}
